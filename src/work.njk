---
layout: layout.njk
title: Work
pagination:
  data: collections
  size: 1
  alias: tag  
permalink: /work/{{ tag }}/
---


<h1 class="text-5xl mb-6">{{ title }}</h1>
<div class="flex flex-wrap gap-4 my-6">
    <a {% if page.url == '/work/everything/' %} aria-current="page" {% endif %} class="pill-button" href="/work/everything">Everything</a>
    <a {% if page.url == '/work/arts/' %} aria-current="page" {% endif %} class="pill-button" href="/work/arts">Arts Organizations</a>
    <a {% if page.url == '/work/business/' %} aria-current="page" {% endif %} class="pill-button" href="/work/business">Small Business</a>
    <a {% if page.url == '/work/education/' %} aria-current="page" {% endif %} class="pill-button" href="/work/education">Education</a>
</div>
<div class="w-full full-width">
    {% set taglist = collections[ tag ] | sort(attribute='data.year') | reverse %}
    {% for post in taglist %}
    <div class="flex flex-row space-between px-4 md:px-8 py-4 items-center gap-4 md:gap-8 w-full block border-t border-gray-200 hover:bg-gray-100 dark:border-gray-900 text-xl md:text-2xl">
        <div class="w-2/12 md:w-1/12">
            {{post.data.year}}
        </div>            
        <div class="w-7/12 md:w-4/12 text-left">
            <a href="{{post.url}}">{{post.data.title}}</a>
        </div>
        
        <div class="w-4/12 hidden md:block">
            {{post.data.tech}}
        </div>     
        <a href="{{post.url}}" class="w-3/12 md:w-2/12 pill-button pill-button-outline">
            Details
        </a>
    </div>
    {% endfor %}

</div>
