---
layout: layout.njk
title: Work
pagination:
  data: collections
  size: 1
  alias: tag  
permalink: /work/{{ tag }}/
---

<h1 class="text-5xl mb-6 hidden">{{ title }}</h1>
<div class="flex flex-wrap gap-4 my-6">
    {% pillbutton page, 'Everything', '/work/everything/' %} 
    {% pillbutton page, 'Arts organizations', '/work/arts/' %}
    {% pillbutton page, 'Small Business', '/work/business/' %}
    {% pillbutton page, 'Education', '/work/education/' %} 
</div>
<div class="w-full full-width border-b border-gray-100 dark:border-gray-800 ">
    {% set taglist = collections[ tag ] | sort(attribute='data.year') | reverse %}
    {% for post in taglist %}
    <a href="{{post.url}}" class="flex flex-row justify-between px-4 md:px-8 py-4 items-center gap-4 md:gap-8 w-full block border-t border-gray-100 dark:border-gray-800 hover:bg-gray-100 dark:hover:bg-gray-800 text-lg md:text-xl">
        
        <div class="w-2/12 md:w-1/12 text-gray-900 dark:text-white">
            {{post.data.year}}
        </div>            
        <div class="w-7/12 md:w-4/12 text-left text-gray-900 dark:text-white">
            {{post.data.title}}
        </div>
        
        <div class="hidden md:w-3/12 md:block text-gray-900 dark:text-white">
            {{post.data.tech}}
        </div>     
        <div class="text-right text-gray-900 dark:text-white">
            ->
        </div>

    </a>
    {% endfor %}

</div>
