---
layout: layout.njk
title: Work
pagination:
    data: collections
    size: 1
    alias: tag  
permalink: /work/{{ tag }}/
---

<h1 class="text-5xl mb-6 hidden">{{ title }}</h1>
<div class="flex flex-wrap gap-4 my-6">
        {% pillbutton page, 'Everything', '/work-new/everything/' %} 
        {% pillbutton page, 'Arts organizations', '/work-new/arts/' %}
        {% pillbutton page, 'Small Business', '/work-new/business/' %}
        {% pillbutton page, 'Education', '/work-new/education/' %} 
</div>
<div class="p-4">
    {% set taglist = collections[ tag ] | sort(attribute='data.importance') %}
    {% for post in taglist %}
        <div class="mb-24">
            <div class="featured-image mb-4">                
                <a href="{{post.url}}"><img class="" src="{{ post.data.image }}" alt="{{post.data.title}}"></a>
            </div>
            <h2 class="font-semibold text-right"><a href="{{post.url}}">{{ post.data.title }} -></a></h2>
        </div>
    {% endfor %}
</div>
